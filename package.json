{
  "name": "dragpack",
  "private": true,
  "version": "1.0.0-alpha",
  "description": "Drag and drop simplified.",
  "keywords": [
    "drag",
    "dnd"
  ],
  "license": "UNLICENSED",
  "author": {
    "name": "Niklas Rämö",
    "email": "inramo@gmail.com",
    "url": "https://github.com/niklasramo"
  },
  "type": "module",
  "source": "src/index.ts",
  "exports": "./dist/dragpack.modern.js",
  "main": "./dist/dragpack.cjs",
  "module": "./dist/dragpack.module.js",
  "unpkg": "./dist/dragpack.umd.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "package.json",
    "tsconfig.json",
    "src",
    "dist",
    "README.md",
    "LICENSE.md"
  ],
  "scripts": {
    "dev": "microbundle watch",
    "build": "npm run ts-check && npm run format && npm run bundle && npm run docs",
    "bundle": "del ./dist && microbundle --strict --name DragPack",
    "docs": "del ./docs && $(npm bin)/typedoc --out docs src/index.ts --name DragPack --includeVersion --disableSources --hideGenerator --theme minimal --readme none",
    "ts-check": "$(npm bin)/tsc --noEmit",
    "format": "$(npm bin)/prettier --write ./src/**/*.ts",
    "format-validate": "$(npm bin)/prettier --list-different ./src/**/*.ts"
  },
  "devDependencies": {
    "del-cli": "4.0.0",
    "microbundle": "0.13.3",
    "prettier": "2.3.2",
    "typedoc": "0.21.2",
    "typescript": "4.2.4"
  }
}
