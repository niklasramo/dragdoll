{
  "name": "dragdoll-root",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "packages/dragdoll",
    "packages/dragdoll-react",
    "packages/dragdoll-docs",
    "packages/dragdoll-tests"
  ],
  "scripts": {
    "build": "npm run format && npm run build --workspace=dragdoll --workspace=dragdoll-react && npm run build:examples --workspace=dragdoll-docs && npm run format",
    "docs:build": "npm run build --workspace=dragdoll-docs",
    "docs:dev": "npm run dev --workspace=dragdoll-docs",
    "docs:serve": "npm run serve --workspace=dragdoll-docs",
    "eslint:check": "eslint . --ext .ts,.tsx,.js,.jsx,.mjs,.mts,.cjs,.cts --max-warnings 0",
    "eslint:write": "eslint . --ext .ts,.tsx,.js,.jsx,.mjs,.mts,.cjs,.cts --fix",
    "format": "npm run eslint:write && npm run prettier:write",
    "lint": "npm run ts:check && npm run prettier:check && npm run eslint:check",
    "prettier:check": "prettier --check --no-error-on-unmatched-pattern \"./*.{js,ts,md,json,yml}\" \"./.github/**/*.yml\" && npm run prettier:check --workspaces --if-present",
    "prettier:write": "prettier --write --no-error-on-unmatched-pattern \"./*.{js,ts,md,json,yml}\" \"./.github/**/*.yml\" && npm run prettier:write --workspaces --if-present",
    "test:bs": "npm run test:bs --workspace=dragdoll-tests",
    "test:local": "npm run test:local --workspace=dragdoll-tests",
    "ts:check": "tsc && npm run ts:check --workspaces --if-present"
  },
  "devDependencies": {
    "@types/react": "19.2.6",
    "@types/react-dom": "19.2.3",
    "@wdio/browser-runner": "9.20.0",
    "@wdio/browserstack-service": "9.20.0",
    "@wdio/cli": "9.20.0",
    "@wdio/globals": "9.17.0",
    "@wdio/mocha-framework": "9.20.0",
    "@wdio/spec-reporter": "9.20.0",
    "dotenv": "17.2.3",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "eventti": "4.0.3",
    "jsdom": "27.2.0",
    "mezr": "1.1.0",
    "prettier": "3.6.2",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "rimraf": "6.1.0",
    "rolldown": "1.0.0-beta.45",
    "tikki": "3.0.2",
    "tsdown": "0.15.12",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "typescript-eslint": "8.47.0",
    "vitepress": "1.6.4",
    "vue": "3.5.24"
  },
  "overrides": {
    "vite": "5.4.21",
    "esbuild": "0.25.12"
  }
}
