{
  "name": "dragdoll",
  "version": "0.2.0",
  "description": "Modular and extensible drag & drop system.",
  "keywords": [
    "drag",
    "drop",
    "dnd",
    "draggable",
    "droppable"
  ],
  "license": "MIT",
  "author": {
    "name": "Niklas Rämö",
    "email": "inramo@gmail.com",
    "url": "https://github.com/niklasramo"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:niklasramo/dragdoll.git"
  },
  "type": "module",
  "source": "./src/index.ts",
  "main": "./dist/index.cjs",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "src",
    "dist",
    "package.json",
    "README.md",
    "LICENSE.md"
  ],
  "scripts": {
    "build": "npm run del-dist && npm run ts-check && npm run format && npm run build-lib && npm run build-tests && npm run size",
    "build-lib": "tsup src/index.ts --format esm,cjs --dts --minify",
    "build-tests": "tsup tests/src/tests.ts --format esm,iife --out-dir ./tests/dist",
    "docs-build": "vitepress build docs",
    "docs-dev": "vitepress dev docs",
    "docs-serve": "vitepress serve docs",
    "del-dist": "del ./dist && del ./tests/dist",
    "format": "prettier --write ./src/ && prettier --write ./tests/src/",
    "size": "for file in ./dist/*.{js,cjs}; do echo $file && gzip-size $file --include-original; done;",
    "test": "npm run ts-check && npm run test-node && npm run test-browserstack",
    "test-browser": "karma start karma.cjs",
    "test-browserstack": "karma start karma.browserstack.cjs",
    "test-node": "mocha tests/dist/tests.js",
    "ts-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/chai": "4.3.5",
    "@types/mocha": "10.0.1",
    "chai": "4.3.7",
    "csstype": "3.1.2",
    "del-cli": "5.0.0",
    "dotenv": "16.3.1",
    "eventti": "3.0.0",
    "gzip-size-cli": "5.1.0",
    "karma": "6.4.2",
    "karma-browserstack-launcher": "1.6.0",
    "karma-chrome-launcher": "3.2.0",
    "karma-firefox-launcher": "2.1.2",
    "karma-mocha": "2.0.1",
    "karma-mocha-reporter": "2.2.5",
    "mocha": "10.2.0",
    "prettier": "3.0.0",
    "tikki": "2.0.0",
    "tsup": "7.1.0",
    "typescript": "5.1.6",
    "vitepress": "1.0.0-beta.5",
    "vue": "3.3.4"
  },
  "peerDependencies": {
    "eventti": "^3.0.0",
    "tikki": "^2.0.0"
  }
}
