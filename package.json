{
  "name": "dragdoll-root",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "packages/dragdoll",
    "packages/dragdoll-docs",
    "packages/dragdoll-tests"
  ],
  "scripts": {
    "build": "npm run format && npm run build --workspace=dragdoll --workspace=dragdoll-tests && npm run build:examples --workspace=dragdoll-docs && npm run format",
    "test:browserstack": "npm run test:browserstack --workspace=dragdoll-tests",
    "test:local": "npm run test:local --workspace=dragdoll-tests",
    "docs:dev": "npm run dev --workspace=dragdoll-docs",
    "docs:build": "npm run build --workspace=dragdoll-docs",
    "docs:serve": "npm run serve --workspace=dragdoll-docs",
    "prettier:check": "prettier --check --no-error-on-unmatched-pattern \"./*.{js,ts,md,json,yml}\" \"./.github/**/*.yml\" && npm run prettier:check --workspaces --if-present",
    "prettier:write": "prettier --write --no-error-on-unmatched-pattern \"./*.{js,ts,md,json,yml}\" \"./.github/**/*.yml\" && npm run prettier:write --workspaces --if-present",
    "eslint:check": "eslint . --ext .ts,.tsx,.js,.jsx,.mjs,.mts,.cjs,.cts --max-warnings 0",
    "eslint:write": "eslint . --ext .ts,.tsx,.js,.jsx,.mjs,.mts,.cjs,.cts --fix",
    "ts:check": "npm run ts:check --workspaces --if-present",
    "format": "npm run eslint:write && npm run prettier:write",
    "lint": "npm run ts:check && npm run prettier:check && npm run eslint:check"
  },
  "devDependencies": {
    "@types/chai": "5.2.2",
    "@types/mocha": "10.0.10",
    "chai": "6.2.0",
    "cpy-cli": "6.0.0",
    "dotenv": "17.2.3",
    "eventti": "4.0.3",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "jsdom": "27.0.0",
    "karma": "6.4.4",
    "karma-browserstack-launcher": "1.6.0",
    "karma-chrome-launcher": "3.2.0",
    "karma-firefox-launcher": "2.1.3",
    "karma-mocha": "2.0.1",
    "karma-mocha-reporter": "2.2.5",
    "mezr": "1.1.0",
    "mocha": "11.7.4",
    "prettier": "3.6.2",
    "rimraf": "6.0.1",
    "rolldown": "1.0.0-beta.43",
    "tikki": "3.0.2",
    "tsdown": "0.15.7",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.1",
    "vitepress": "1.6.4",
    "vue": "3.5.22"
  }
}
